@model List<AuthCsvApp.Models.User>

@{
    ViewData["Title"] = "Enter Grades";
    var selectedClass = (AuthCsvApp.Models.Class)ViewBag.Class;
    var studentGrades = (Dictionary<string, AuthCsvApp.Models.Grade>)ViewBag.StudentGrades;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    .dashboard-header {
        background-color: #28a745;
        color: white;
        padding: 20px;
        border-radius: 8px 8px 0 0;
        text-align: center;
    }

    .dashboard-card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .footer {
        text-align: center;
        padding: 10px;
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
        margin-top: 20px;
    }

    .score-input {
        width: 80px;
    }
</style>

<div class="dashboard-card">
    <div class="dashboard-header">
        <h2><i class="fas fa-edit mr-2"></i>Enter Grades</h2>
        <p class="mb-0">Class ID: @selectedClass.Id | Schedule: @selectedClass.Schedule</p>
    </div>

    <div class="card-body p-4">
        <h4 class="mb-3"><i class="fas fa-users mr-2"></i>Students in Class</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
        }

        @if (Model == null || !Model.Any())
        {
            <p class="text-muted"><i class="fas fa-exclamation-circle mr-2"></i>No students registered for this class.</p>
        }
        else
        {
            <form asp-action="EnterGrades" asp-controller="Teacher" asp-route-classId="@selectedClass.Id" method="post">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Username</th>
                                <th>Full Name</th>
                                <th>Midterm Score</th>
                                <th>Final Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                var grade = studentGrades != null && studentGrades.ContainsKey(student.Username) ? studentGrades[student.Username] : null;
                                <tr>
                                    <td>@student.Username</td>
                                    <td>@student.FullName</td>
                                    <td>
                                        <input type="number" step="0.1" min="0" max="10" name="midtermScores[@student.Username]" class="form-control score-input" value="@(grade != null ? grade.MidtermScore : "")" required />
                                    </td>
                                    <td>
                                        <input type="number" step="0.1" min="0" max="10" name="finalScores[@student.Username]" class="form-control score-input" value="@(grade != null ? grade.FinalScore : "")" required />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <button type="submit" class="btn btn-success mt-3">
                    <i class="fas fa-save mr-1"></i>Save Grades
                </button>
                <a asp-action="Dashboard" asp-controller="Teacher" class="btn btn-secondary mt-3">
                    <i class="fas fa-arrow-left mr-1"></i>Back to Dashboard
                </a>
            </form>
        }
    </div>
</div>

<div class="footer">
    <p class="text-muted mb-0">© 2025 ASMAPDP - Student Management System</p>
</div>